{
  "package": {
    "name": "com.dyga.engine-core",
    "repo": "dyga-engine",
    "subject": "dyga-entertainment",
    "desc": "2D game engine core which allows to build platformer and puzzle games.",
    "website_url": "${project.url}",
    "issue_tracker_url": "https://github.com/dyga-entertainment/DygaEngine/issues",
    "vcs_url": "https://github.com/dyga-entertainment/DygaEngine",
    "github_use_tag_release_notes": true,
    "github_release_notes_file": "RELEASE.txt",
    "licenses": ["GPL-3.0"],
    "labels": ["game-engine", "2D-engine", "video-game"],
    "public_download_numbers": false,
    "public_stats": false
  },

  "version": {
    "name": "${project.version}",
    "desc": "Early version of the engine to test bintray upload.",
    "released": "${maven.build.timestamp}",
    "vcs_tag": "${project.version}",
    "gpgSign": false
  },

  "files":
  [
    {"includePattern": "pom.xml", "uploadPattern": "com/dyga/Engine/dyga-engine/${project.version}/dyga-engine-${project.version}.pom"},
    {"includePattern": "dyga-core/target/(.*\.jar)", "uploadPattern": "com/dyga/Engine/dyga-core/${project.version}/$1"},
    {"includePattern": "dyga-core/pom.xml", "uploadPattern": "com/dyga/Engine/dyga-core/${project.version}/dyga-core-${project.version}.pom"}
  ],
  "publish": true
}